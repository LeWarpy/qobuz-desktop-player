{
  "name": "qobuz-desktop-player",
  "productName": "Qobuz Desktop player",
  "version": "0.1.5",
  "description": "Qobuz desktop player avec Discord RPC",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "release": "electron-builder"
  },
  "repository": "https://github.com/LeWarpy/qobuz-desktop-player",
  "keywords": [
    "Electron",
    "Qobuz"
  ],
  "author": "Anthony BILLON <coucou@lewarpy.fr> (https://lewarpy.fr)",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.26.0",
    "discord-rpc": "^4.0.1",
    "electron-config": "^1.0.0",
    "electron-log": "^5.2.3",
    "electron-settings": "^4.0.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "electron-builder-notarize": "^1.5.2",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "lewarpy.qobuz.desktop.player",
    "win": {
      "target": [
        "nsis"
      ],
      "defaultArch": "x64"
    },
    "afterSign": "electron-builder-notarize",
    "mac": {
      "hardenedRuntime": true,
      "category": "public.app-category.music"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "AudioVideo,Audio"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}
